<div class="mt-5 mt-md-0"></div>

<div class="container col-lg-6 offset-lg-3 h-100">
<div class="row h-100  justify-content-md-around align-items-md-center">
    <form action="/users/login" method="post" class="col-12">
        <% if(errors.length != 0){ %> 
            <% errors.forEach(error=>{   if(error.param == 'not'){ %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  <strong><%= error.msg %> </strong> 
                </div>
              <%  }}) %> 
            <% } %> 
        <div class="form-group mb-4">
            <label for="exampleInputPhone">رقم التليفون :  </label>
            <input type="number" name="phone" id="exampleInputPhone" min="0" class="form-control" <% if(user){%> value="<%=user.phone%>" <% } %>  >
        </div>

        <div class="form-group mb-4">
            <label for="exampleInputPassword"> كلمة السر : </label>
            <input type="password" name="password" id="exampleInputPassword" class="form-control">
        </div>
                <% if(errors.length != 0){ %> 
            <% errors.forEach(error=>{   if(error.param == 'password'){ %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  <strong><%= error.msg %> </strong> 
                </div>

         <%  }}) %> 
    <% } %> 

        <button type="submit" class="btn btn-primary w-25 ms-md-5 btn-lg float-md-start">تسجيل الدخول</button>
    </form> 
</div>
</div>